<div class="!relative !mx-10 md:!mx-44">
  <div class="md:!w-1/2 !w-full">
    <h1 class="!text-center md:!text-left !font-bold !my-8 md:!text-6xl !text-5xl !leading-loose !tracking-wider">{{ section.settings.headline }}</h1>
  </div>

  <div class="!flex !flex-col-reverse md:!flex-row gap-5 md:!justify-between ">
    <div class="!mb-20">
      <div class="!my-8 !mx-4 ">
        <div class="!text-gray-400">
          {% for i in (1..3) %}
            {% liquid
              assign subheadline_var = "subheadline" | append: i
              assign icon_var = "icon" | append: i
            %}
            <div class="!flex !items-center !gap-6">
              <img
                class="!w-12 !h-12 !object-cover !rounded-full"
                src="{{ section.settings[icon_var] |  image_url: width: 48 }}"
                alt="Icon {{ i }}">
              <h2 class="!my-8 !text-2xl !tracking-widest">{{ section.settings[subheadline_var] }}</h2>
            </div>
          {% endfor %}

        </div>
      </div>

      <button class="!px-10 !py-6 md:!p-5 md:!w-3/5 !bg-blue-800 !text-white md:!text-2xl !text-4xl !rounded-lg !w-full">{{ section.settings.btn-text }}</button>
    </div>

    <div class="!flex !mx-8 !items-center !justify-center md:!w-1/2 !gap-2 !h-[40rem]">
      <div class="!h-[30rem] !w-[16rem]">
        <img
          class="!h-full !w-full !object-cover"
          src="{{ section.settings.image1 | image_url: width: 256 }}"
          alt="Image 1" />
      </div>
      <div class="!h-[38rem] !w-[20rem]">
        <img
          class="!h-full !w-full !object-cover"
          src="{{ section.settings.image2 | image_url: width: 320 }}"
          alt="Image 2" />
      </div>
      <div class="!h-[30rem] !w-[16rem]">
        <img
          class="!h-full !w-full !object-cover"
          src="{{ section.settings.image3 | image_url: width: 256 }}"
          alt="Image 3" />
      </div>
    </div>


  </div>


  <div class="!absolute !w-full md:!w-1/3 !block md:!-bottom-[20%] !h-auto !p-6 !bg-white !border !border-gray-200 !rounded-lg !shadow !hover:bg-gray-100 dark:!bg-gray-800 dark:!border-gray-700 dark:!hover:bg-gray-700">
    <div class="!flex !items-center !justify-between !mb-8">
      <img
        class="!w-16 !h-16 !object-cover !rounded-full"
        src="{{ section.settings.card_avatar | image_url: width: 64 }}"
        alt="User Avatar">
      <h5 class="!text-2xl">{{ section.settings.card_user }}</h5>
      <p class="!text-xl">⭐⭐⭐⭐⭐ One of 500+ 5 Star Reviews Online</p>

    </div>
    <p class="!text-xl !text-wrap">{{ section.settings.card_review }}</p>
  </div>


</div>

{% schema %}
  {
    "name": "Hero Section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "headline",
        "default": "Don't apologize for being comfortable",
        "label": "Headline"
      },
      {
        "type": "text",
        "id": "subheadline1",
        "default": "Beautiful, comfortable loungewear for day or night",
        "label": "Subheadline 3"
      },
      {
        "type": "text",
        "id": "subheadline2",
        "default": "No wasteful extras, like tags or plastic packaging",
        "label": "Subheadline 2"
      },
      {
        "type": "text",
        "id": "subheadline3",
        "default": "Our signature fabric is incredible comfortable - unlike anything you've ever felt.",
        "label": "Subheadline 3"
      },
      {
        "type": "text",
        "id": "card_user",
        "default": "Amy P.",
        "label": "User Review Name"
      },
      {
        "type": "text",
        "id": "card_review",
        "default": "Lorem ipsum dolor sit, amet consectetur adipisicing elit. Ex facilis adipisci iste nostrum saepe reprehenderit sunt, exercitationem culpa at dolorum maiores voluptates rerum temporibus consequuntur pariatur enim molestiae vel aperiam!",
        "label": "User Review Name"
      },
       {
        "type": "text",
        "id": "btn-text",
        "default": "Customize Your Outfit",
        "label": "Button Text"
      }, {
        "type": "image_picker",
        "id": "image1",
        "label": "Image 1"
      }, {
        "type": "image_picker",
        "id": "image2",
        "label": "Image 2"
      }, {
        "type": "image_picker",
        "id": "image3",
        "label": "Image 3"
      }, {
        "type": "image_picker",
        "id": "icon1",
        "label": "Icon 1"
      }, {
        "type": "image_picker",
        "id": "icon2",
        "label": "Icon 2"
      }, {
        "type": "image_picker",
        "id": "icon3",
        "label": "Icon 3"
      }
      , {
        "type": "image_picker",
        "id": "card_avatar",
        "label": "User Review Avatar"
      }

    ],
    "presets": [
      {
        "name": "Hero"
      }
    ]
  }
{% endschema %}