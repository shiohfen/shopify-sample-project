<!-- Main container with padding and background color -->
 <div class="!bg-slate-100">
<div class="!mx-10 md:!mx-44 !py-24">

  <!-- Section for displaying a headline -->
  <div>
    <h1 class="!text-center md:!text-left !font-bold !mb-28 md:!text-5xl !text-4xl !leading-loose !tracking-wider !block md:!hidden">{{ section.settings.headline }}</h1>
  </div>

  <!-- Flex container for layout -->
  <div class="!flex !flex-col md:!flex-row gap-5 md:!justify-between ">

    <!-- Container for the main image and overlay images -->
    <div class="!flex !mx-8 !items-center !justify-center md:!w-1/2 !gap-2">
      <div class="!h-[56rem] !w-[40rem] !relative">
        <!-- Main image -->
        <img
          src="{{ section.settings.image1 | image_url: width: 640 }}"
          alt="Image 1"
          class="!h-full !w-full !object-cover">

        <!-- Overlay image on the bottom right -->
        <div class="!h-[12rem] !w-[10rem] !absolute !-bottom-20 !border-4 !border-white !-right-20 !flex !items-center !justify-between">
          <img
            src="{{ section.settings.image2 | image_url: width: 160 }}"
            alt="Image 2"
            class="!h-full !w-full !object-cover">
        </div>

        <!-- Overlay image on the top left -->
        <div class="!h-[12rem] !w-[10rem] !absolute !-left-20 !border-4 !border-white !-top-20 !flex !items-center !justify-between">
          <img
            src="{{ section.settings.image3 | image_url: width: 160 }}"
            alt="Image 3"
            class="!h-full !w-full !object-cover">
        </div>
      </div>
    </div>

    <!-- Container for text content and button -->
    <div class="!mb-20 md:!w-1/2 !mt-28 md:!mt-0">
      <div class="!my-8 !mx-4">
        <div class="!text-gray-400">
          <!-- Headline displayed only on medium screens and above -->
          <h1 class="!hidden md:!block !text-center md:!text-left !font-bold !mb-8 md:!text-5xl !text-4xl !leading-loose !tracking-wider">{{ section.settings.headline }}</h1>

          <!-- Loop through 5 paragraphs and display them -->
          {% for i in (1..5) %}
            {% assign par_var = "paragraph" | append: i %}
            <p class="!text-2xl !mb-8">{{ section.settings[par_var] }}</p>
          {% endfor %}
        </div>
      </div>

      <!-- Button displayed only on medium screens and above -->
      <button class="!hidden md:!block !px-10 !py-6 md:!p-5 md:!w-3/5 !bg-blue-800 !text-white md:!text-2xl !text-4xl !rounded-lg !w-full">{{ section.settings.btn-text }}</button>
    </div>
  </div>
</div>
</div>

