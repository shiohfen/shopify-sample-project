<div class="!mx-10 md:!mx-32 md:!p-12 !mt-12 !h-full !flex md:!justify-center !flex-col md:!flex-row !gap-8 !items-center">

  <div class="md:!w-1/2 !w-full !block md:!hidden">
    <h1 class="!text-center md:!text-left !font-bold !my-2 md:!text-6xl !text-5xl !leading-loose !tracking-wider">{{ section.settings.headline }}</h1>
  </div>

  <div class="!m-32">
    <div class="!relative !flex !h-[36rem] !w-[24rem] !items-end !justify-start !bg-cover !bg-center" style="background-image:url({{ section.settings.image1 | img_url : 'master' }});">
      <div class="!absolute !-left-20 !w-40 !h-44 !-top-20 !mx-5 !mt-2 !flex !items-center !justify-between">
        <img
          class="!border-4 !border-white !object-cover !w-full !h-full"
          src="{{ section.settings.image2 | img_url : 'master' }}"
          alt="" />
      </div>
      <div class="!absolute !-bottom-20 !w-40 !h-44 !-right-20 !mx-5 !mt-2 !flex !items-center !justify-between">
        <img
          class="!border-4 !border-white !object-cover !w-full !h-full"
          src="{{ section.settings.image3 | img_url : 'master' }}"
          alt="" />
      </div>
    </div>
  </div>


  <div class="">
    <div class="md:!w-1/2 !w-full !hidden md:!block">
      <h1 class="!text-center md:!text-left !font-bold !my-8 md:!text-6xl !text-5xl !leading-loose !tracking-wider">{{ section.settings.headline }}</h1>
    </div>

    <div>
      <div class="!my-8">
        <div class="!text-gray-400">
          <div class="!my-10 !text-2xl !tracking-widest">
            <p class="mb-10">{{ section.settings.paragraph1 }}</p>
            <p class="mb-10">{{ section.settings.paragraph2 }}</p>
            <p class="mb-10">{{ section.settings.paragraph3 }}</p>
            <p class="mb-10">{{ section.settings.paragraph4 }}</p>
            <p class="mb-10">{{ section.settings.paragraph5 }}</p>
          </div>
        </div>
      </div>
      <button class="!px-10 !py-6 md:!p-5 md:!w-3/5 !bg-blue-950 !text-white md:!text-2xl !text-4xl !rounded !w-full !hidden md:!block">{{ section.settings.btn-text }}</button>
    </div>

  </div>


</div>

