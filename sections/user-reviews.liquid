<!-- Container for the entire section with responsive margins and bottom spacing -->
<div class="!mx-10 md:!mx-44 !mb-40">
  
  <!-- Section for heading and introductory text -->
  <div class="!px-20 md:!px-40 !py-16 !text-center">
    <!-- Main heading with large, bold text -->
    <h1 class="!py-10 !text-center md:!text-6xl !text-5xl !font-bold">What are our fans saying?</h1>
    <div class="!flex !justify-center">
      <!-- Introductory paragraph with responsive width -->
      <p class="!w-full md:!w-1/2 !text-2xl">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Dolor ab nam tempora rem, odit perferendis autem beatae adipisci eos quod necessitatibus corrupti itaque facere unde deleniti ea exercitationem dolorum excepturi?</p>
    </div>
  </div>

  <!-- Desktop image gallery -->
  <div class="!hidden md:!block">
    <div class="!flex !flex-wrap !gap-2 !justify-center !my-12">
      {% for i in (1..22) %}
        <!-- Individual image container with rounded corners -->
        <div class="!h-48 !w-48 !rounded">
          <img
            class="!h-full !w-full !object-cover"
            src="https://picsum.photos/100/150?random{{ i }}"
            alt="" />
        </div>
      {% endfor %}
    </div>
  </div>

  <!-- Mobile image gallery -->
  <div class="!block md:!hidden">
    <div class="!flex !flex-wrap !gap-2 !justify-center !my-12">
      {% for i in (1..8) %}
        <!-- Individual image container with rounded corners -->
        <div class="!h-48 !w-48 !rounded">
          <img
            class="!h-full !w-full !object-cover"
            src="https://picsum.photos/100/150?random{{ i }}"
            alt="" />
        </div>
      {% endfor %}
    </div>
  </div>

  <!-- Swiper slider for reviews -->
  <div class="w-full relative">
    <div class="swiper multiple-slide-carousel2 swiper-container relative">
      <div class="swiper-wrapper mb-4">
        {% for i in (1..6) %}
          <div class="swiper-slide">
            <div class="rounded-2xl h-96 flex justify-center items-center">
              <div class="!w-full !block !h-auto !p-6 !bg-white !border !border-gray-200 !rounded-lg !shadow !hover:bg-gray-100 dark:!bg-gray-800 dark:!border-gray-700 dark:!hover:bg-gray-700">
                <!-- Review card content -->
                <div class="!flex !items-center !justify-between !mb-8">
                  <!-- User avatar -->
                  <img
                    class="!w-16 !h-16 !object-cover !rounded-full"
                    src="https://picsum.photos/800/600?random{{ i }}"
                    alt="User Avatar">
                  <!-- User name -->
                  <h5 class="!text-2xl">Jane. S</h5>
                  <!-- Review rating -->
                  <p class="!text-xl">⭐⭐⭐⭐⭐ One of 500+ 5 Star Reviews Online</p>
                </div>
                <!-- Review text -->
                <p class="!text-xl !text-wrap">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Et inventore itaque commodi quo ratione, non doloremque ad minus, ducimus libero laborum incidunt, maxime enim impedit veritatis iure assumenda sunt in.</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- Swiper navigation buttons -->
      <div class="flex items-center gap-8 lg:justify-start justify-center">
        <button
          id="slider-button-left"
          class="swiper-button-prev group !p-2 flex justify-center items-center !top-1/2 !-translate-y-1/2 !left-5 "
          data-carousel-prev>
        </button>
        <button
          id="slider-button-right"
          class="swiper-button-next group !p-2 flex justify-center items-center !top-1/2 !-translate-y-1/2 !right-5"
          data-carousel-next>
        </button>
      </div>

      <!-- Swiper pagination for mobile -->
      <div class="swiper-pagination !block md:!hidden"></div>
    </div>
  </div>

  <!-- Call-to-action button and review rating -->
  <div class="!flex !justify-center">
    <div class="!w-full md:!w-1/3">
      <!-- Button with customizable text -->
      <button class="!px-10 !py-7 md:!p-5 !bg-blue-950 !text-white md:!text-2xl !text-4xl !rounded !w-full">{{ section.settings.btn-text }}</button>
      <!-- Review rating text -->
      <p class="!text-xl !my-4 !text-center">⭐⭐⭐⭐⭐ Over 500+ 5 Star Reviews Online</p>
    </div>
  </div>
</div>

<!-- CSS Styles -->
{% stylesheet %}
  / CSS Code / 
  /* Ensures swiper-wrapper takes full width and adjusts height */
  .swiper-wrapper {
    width: 100%;
    height: max-content !important;
    -webkit-transition-timing-function: linear !important;
    transition-timing-function: linear !important;
    position: relative;
  }
  /* Custom color for pagination bullets */
  .swiper-pagination-bullet {
    background: #4f46e5;
  }
{% endstylesheet %}

<!-- Section schema for settings -->
{% schema %}
  {
    "name": "User reviews",
    "settings": [
      {
        "type": "text",
        "id": "btn-text",
        "default": "Customize Your Outfit",
        "label": "Button Text"
      }
    ],
    "presets": [
      {
        "name": "User reviews"
      }
    ]
  }
{% endschema %}

<!-- JavaScript for Swiper -->
{% javascript %}
  var swiper4 = new Swiper(".multiple-slide-carousel2", {
    loop: true, /* Enables looping of slides */
    slidesPerView: 3, /* Number of slides visible at once */
    spaceBetween: 20, /* Space between slides */
    pagination: {
      el: ".multiple-slide-carousel2 .swiper-pagination", /* Pagination element */
      clickable: true /* Makes pagination dots clickable */
    },
    navigation: {
      nextEl: ".multiple-slide-carousel2 .swiper-button-next", /* Next slide button */
      prevEl: ".multiple-slide-carousel2 .swiper-button-prev" /* Previous slide button */
    },
    breakpoints: {
      1536: {
        slidesPerView: 3, /* Number of slides visible at 1536px width */
        spaceBetween: 30 /* Space between slides at 1536px width */
      },
      1280: {
        slidesPerView: 3, /* Number of slides visible at 1280px width */
        spaceBetween: 30 /* Space between slides at 1280px width */
      },
      1024: {
        slidesPerView: 2, /* Number of slides visible at 1024px width */
        spaceBetween: 30 /* Space between slides at 1024px width */
      },
      768: {
        slidesPerView: 2, /* Number of slides visible at 768px width */
        spaceBetween: 30 /* Space between slides at 768px width */
      },
      640: {
        slidesPerView: 1, /* Number of slides visible at 640px width */
        spaceBetween: 0 /* Space between slides at 640px width */
      },
      0: {
        slidesPerView: 1, /* Number of slides visible at 0px width */
        spaceBetween: 0 /* Space between slides at 0px width */
      }
    }
  });
{% endjavascript %}
