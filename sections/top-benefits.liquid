<!-- JavaScript to initialize and configure the Swiper carousels -->
{% javascript %}
  var swiper = new Swiper(".multiple-slide-carousel", {
    loop: true,
    slidesPerView: 5, // Number of slides visible at once
    pagination: {
      el: ".swiper-pagination",
      clickable: true // Enable pagination bullets to be clickable
    },
    spaceBetween: 20, // Space between slides
    breakpoints: {
      1536: {
        slidesPerView: 5,
        spaceBetween: 30
      },
      1280: {
        slidesPerView: 4,
        spaceBetween: 30
      },
      1024: {
        slidesPerView: 3,
        spaceBetween: 30
      },
      768: {
        slidesPerView: 2,
        spaceBetween: 15
      },
      640: {
        slidesPerView: 3,
        spaceBetween: 15
      },
      0: {
        slidesPerView: 3,
        spaceBetween: 30
      }
    }
  });

  var swiper2 = new Swiper(".default-carousel", {
    loop: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev"
    }
  });
{% endjavascript %}
